{
    "nodeModulesDir": "auto",
    "imports": {
        "https://deno.land/std@0.168.0/": "https://deno.land/std@0.168.0/",
        "https://esm.sh/@supabase/supabase-js@2": "https://esm.sh/@supabase/supabase-js@2"
    },
    "compilerOptions": {
        "lib": [
            "deno.window",
            "deno.ns",
            "es2022"
        ],
        "strict": true,
        "noImplicitAny": false
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 2,
        "semiColons": false,
        "singleQuote": true
    }
}