{
    "imports": {
        "https://deno.land/std@0.168.0/": "https://deno.land/std@0.168.0/",
        "https://esm.sh/@supabase/supabase-js@2": "https://esm.sh/@supabase/supabase-js@2"
    },
    "include": [
        "./prompt_templates/*.yaml",
        "./prompt_templates/*.yml"
    ],
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "deno.window",
            "deno.ns",
            "deno.unstable",
            "es2022"
        ],
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 2,
        "semiColons": false,
        "singleQuote": true
    }
}